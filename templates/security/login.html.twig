{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="vh-100">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <div class="row justify-content-center">
    <h1 class="text-center mb-3">Se connecter </h1>
        <div class="col-4">
            <div class="my-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="my-3">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="d-flex justify-content-center col-12 col-md-2">
            <button class="btn  btn-primary  btn-lg" type="submit">
                Se connecter
            </button>
        </div>
        <div class="col-2">
            <label class="d-block my-3">
                <input type="checkbox" name="_remember_me" checked>
                Se souvenir de moi
            </label>

            <a href="{{path('app_forgot_password_request')}}"> Mot de passe oublier !</a>
        </div>
    </div>

</form>
{% endblock %}
