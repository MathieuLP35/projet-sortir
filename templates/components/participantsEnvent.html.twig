<h2 class="mb-2">Liste des participants inscrits :</h2>
{% if participants is not empty %}
	<table class="table">
		<thead>
			<tr>
				<th>Pseudo</th>
				<th>Nom</th>
			</tr>
		</thead>
		<tbody>
			{% for participant in participants %}
				<tr>
					<td>{{ participant.username }}</td>
					<td>{{ participant.firstname }}
						{{ participant.name }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% else %}
