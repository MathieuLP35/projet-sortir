{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <h1 class="mb-3">Mon Profil</h1>

    <div class="row">
        <div class="col-12 col-md-6 d-flex justify-content-center">
            {% if user.getProfilePicture() %}
                <img src="{{ asset('uploads/user_profile_pictures/' ~ user.getProfilePicture()) }}" class="img-fluid" alt="Photo de profil">
            {% else %}
                {# Afficher une image par défaut si l'utilisateur n'a pas de photo de profil #}
                <img src="{{ asset('uploads/user_profile_pictures/default_profile_picture.png') }}" class="img-fluid" alt="Photo de profil par défaut">
            {% endif %}
        </div>
        <div class="col-12 col-md-6 bg-filter-eni p-4">
            {{ form_start(form) }}

            <div class="form-row">
                <div class="form-group col-md-12 mb-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>

                <div class="form-group col-md-12 mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12 mb-3">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                </div>

                <div class="form-group col-md-12 mb-3">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12 mb-3">
                    {{ form_label(form.password.first) }}
                    {{ form_widget(form.password.first) }}
                </div>

                <div class="form-group col-md-12 mb-3">
                    {{ form_label(form.password.second) }}
                    {{ form_widget(form.password.second) }}
                </div>
            </div>
            <div class="form-group col-md-12 mb-3">
                {{ form_label(form.profilePictureFile) }}
                {{ form_widget(form.profilePictureFile) }}
            </div>

            <div class="form-group mt-3">
                {{ form_widget(form.save) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
