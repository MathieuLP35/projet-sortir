{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}

<h1>Event index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>StartDatetime</th>
            <th>Duration</th>
            <th>LimitRegisterDate</th>
            <th>MaxRegisterQty</th>
            <th>EventInfos</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for event in events %}
        <tr {% if event.etat.libelle == 'Cancelled' %}style="text-decoration: line-through;"{% endif %}>
            <td>{{ event.id }}</td>
            <td>{{ event.name }}</td>
            <td>{{ event.startDatetime ? event.startDatetime|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ event.duration }}</td>
            <td>{{ event.limitRegisterDate ? event.limitRegisterDate|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ event.maxRegisterQty }}</td>
            <td>{{ event.eventInfos }}</td>

            <!-- Colonne Actions -->
            <td>
                <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-info">Show</a>
            </td>
            <td>
                {% if event.etat.libelle != 'Cancelled' %}
                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning">Edit</a>
                {% endif %}
            </td>
            <td>
                {% if app.user == event.organiser and event.etat.libelle != 'Cancelled' %}
                <a href="{{ path('app_cancel_event', {'id': event.id}) }}" class="btn btn-danger">Cancel Event</a>
                {% endif %}
            </td>
            <td>
                {% if event.etat.libelle != 'Cancelled' %}
                {% if not event.getIsRegister().contains(app.user) %}
                <a href="{{ path('app_register_for_event', {'id': event.id}) }}" class="btn btn-primary">Register</a>
                {% else %}
                <a href="{{ path('app_register_for_event', {'id': event.id}) }}" class="btn btn-danger">Unsubscribe</a>
                {% endif %}
                {% endif %}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_event_new') }}">Create new</a>

{% endblock %}