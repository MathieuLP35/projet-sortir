{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}

    <h1>Event index</h1>
    {{ form_start(form_event_filter) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form_event_filter) }}
    </div>

    <div class="row">
        <div class="col-6">
            <h2 class="fs-5">Filtrer les sorties:</h2>
            {{ form_row(form_event_filter.sites) }}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{ form_row(form_event_filter.event) }}
            <div class="d-flex justify-content-between align-items-center">
                <span>Entre: </span>
                {{ form_row(form_event_filter.startDate) }}
                <span> et </span>
                {{ form_row(form_event_filter.endDate) }}
            </div>
        </div>
        <div class="col-4 d-flex flex-column justify-content-between ps-5">
            {{ form_row(form_event_filter.organiser) }}
            {{ form_row(form_event_filter.isRegistered) }}
            {{ form_row(form_event_filter.isNotRegistered) }}
            {{ form_row(form_event_filter.oldEvent) }}
        </div>
        <div class="col-2">
            {{ form_row(form_event_filter.save) }}
        </div>
    </div>
    {{ form_end(form_event_filter) }}

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>StartDatetime</th>
            <th>Duration</th>
            <th>LimitRegisterDate</th>
            <th>MaxRegisterQty</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for event in events %}

            <tr {% if event.etats and event.etats.libelle == 'AnnulÃ©' %}style="text-decoration: line-through;"{% endif %}>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.startDatetime ? event.startDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.duration }}</td>
                <td>{{ event.limitRegisterDate ? event.limitRegisterDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.maxRegisterQty }}</td>
                <!-- Colonne Actions -->
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-info">Show</a>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                        {% if event.etats.libelle != 'Cancelled' %}
                            {% if not event.getIsRegister().contains(app.user) %}
                                <a href="{{ path('app_register_for_event', {'id': event.id}) }}" class="btn btn-primary">Register</a>
                            {% else %}
                                <a href="{{ path('app_unregister_for_event', {'id': event.id}) }}" class="btn btn-danger">Unsubscribe</a>
                            {% endif %}
                        {% endif %}


                        {% if app.user == event.organiser %}
                            {% if event.etats.libelle != 'Cancelled' %}
                                <div class="btn-group">
                                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('app_event_edit', {'id': event.id}) }}" class="dropdown-item">Edit</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a href="{{ path('app_cancel_event', {'id': event.id}) }}" class="dropdown-item">Cancel event</a></li>
                                    </ul>
                                </div>
                            {% endif %}
                        {% endif %}

                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_event_new') }}">Create new</a>

{% endblock %}