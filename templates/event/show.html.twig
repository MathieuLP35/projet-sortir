{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>StartDatetime</th>
                <td>{{ event.startDatetime ? event.startDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ event.duration }}</td>
            </tr>
            <tr>
                <th>LimitRegisterDate</th>
                <td>{{ event.limitRegisterDate ? event.limitRegisterDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MaxRegisterQty</th>
                <td>{{ event.maxRegisterQty }}</td>
            </tr>
            <tr>
                <th>EventInfos</th>
                <td>{{ event.eventInfos }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between col-md-4">
        <a class="btn btn-dark" href="{{ path('app_event_index') }}">back to list</a>
        {% if app.user %}
            <a class="btn btn-primary" href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
            {{ include('event/_delete_form.html.twig') }}
        {% endif %}
    </div>
   
    <div class="col-4 mt-5">
    {{ include('components/participantsEnvent.html.twig') }}
    </div>

{% endblock %}
