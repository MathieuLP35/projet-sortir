{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de la sortie</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date et heure de la sortie</th>
                <td>{{ event.startDatetime ? event.startDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ event.duration }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription</th>
                <td>{{ event.limitRegisterDate ? event.limitRegisterDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre de places</th>
                <td>{{ event.maxRegisterQty }}</td>
            </tr>
            <tr>
                <th>Description et infos</th>
                <td>{{ event.eventInfos }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between col-md-4">
        <a class="btn btn-dark" href="{{ path('app_event_index') }}">retour à la liste</a>
        {% if app.user == event.organiser %}
            <a class="btn btn-primary" href="{{ path('app_event_edit', {'id': event.id}) }}">modifier</a>
            {{ include('event/_delete_form.html.twig') }}
        {% endif %}
    </div>
   
    <div class="col-4 mt-5">
    {{ include('components/participantsEnvent.html.twig') }}
    </div>

{% endblock %}
